<% content_for :head do%>
<%= javascript_include_tag 'cartshop', 'data-turbolinks-track': 'reload' %>
<% end %>


<h1>购物车</h1>
<div class="row">
  <div class="container">
    <div class="alert alert-info">
      <% unless @arr.blank? %>
        <% @product.each do |shopping_cart| %>
          <div class="media shopping-cart-row">
            <div class="media-left">
              <a href="<%= product_path(shopping_cart.id) %>">
			    <%= image_tag "product/#{shopping_cart.id}.jpg", alt: shopping_cart.title, size: "50x50" %>
              </a>
            </div>
            <div class="media-body">
				<h4 class="media-heading"><%= link_to shopping_cart.title, product_path(shopping_cart.id) %></h4>
				<span class="pid"><%= shopping_cart.id %></span>库存:充足&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; 
				单价: ¥<span class="price"><%= shopping_cart.price %></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				<button class="bleft" >&nbsp;-&nbsp;</button>
				<input type="text" value="<%= shopping_cart.amount %>" class="amount" />
				<button class="bright" >&nbsp;+&nbsp;</button>
				&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
				<strong>　　小计: </strong>
				<strong class="subtotle"></strong>
			</div>

            <div class="media-right">
				<br />
                <%= link_to "　删 除　", cart_shop_path(:non=>shopping_cart.id), class: "btn btn-default btn-xs" %>
            </div>
			<br />
          </div>
        <% end -%>
      <% else %>
        <h3>购物车为空</h3>
      <% end -%>
    </div>

    <% unless @arr.blank? %>
		<div class="row">
			<div class="col-md-2">
				<h4>请选择您的科室</h4>
				<%= select_tag(:lang, options_for_select(@all_st) , class: "form-control" ) %>
			</div>
			<div class="col-md-8"></div>
			<div class="col-md-2">
				<h3>总价: ¥<span class="totle">没算出来 !-_-　</span>　</h3>
				<button class="btn btn-danger btn-lg" id="cartorder">去结算</button>
			</div>
		</div>
		<div class="clearfix"></div>
    <% end %>
  </div>
</div>
<%= form_for @product do |f| %>
	<% if @product.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluraliza(@product.errors.count,"error") %>prohibited this product from being saved:
			</h2>
			<ul>
				<% @product.errors.full_message.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<p>
		<%= f.label :id %><br>
		<%= f.text_field :id %>
	</p>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :item %><br>
		<%= f.select :item, options_for_select(@all_item) %>
	</p>
	<p>
		<%= f.label :price %><br>
		<%= f.text_field :price %>
	</p>
	<p>
		<%= f.label :remark %><br>
		<%= f.text_area :remark %>
	</p>
	<p>
		<%= f.submit %>
	</p>

<% end %>